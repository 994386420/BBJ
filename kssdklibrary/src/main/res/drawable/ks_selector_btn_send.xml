<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/ks_button_pressed" />
            <stroke android:color="@color/ks_button_pressed" android:width="0.5dp"/>
            <corners android:radius="3dp" />
            <padding android:left="5dp" android:right="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/ks_button" />
            <stroke android:color="@color/ks_button" android:width="0.5dp"/>
            <corners android:radius="3dp" />
            <padding android:left="5dp" android:right="5dp" />
        </shape>
    </item>
</selector>
