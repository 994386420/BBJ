<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/KSMatchMatch"
    android:background="@color/ks_white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/evaClose"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/dialog_close"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        style="@style/KSMatchWrap.Vertical"
        android:layout_below="@+id/evaClose"
        android:gravity="center">
        <TextView
            style="@style/KSWrapWrap"
            android:text="@string/ks_eva_title"
            android:textSize="16sp"
            android:textColor="#6A6A6A"/>
        <LinearLayout
            style="@style/KSMatchWrap"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/evaStart1"
                style="@style/KSWrapWrap"
                android:src="@drawable/start_selected"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/evaStart2"
                style="@style/KSWrapWrap"
                android:src="@drawable/start_selected"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/evaStart3"
                style="@style/KSWrapWrap"
                android:src="@drawable/start_selected"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/evaStart4"
                style="@style/KSWrapWrap"
                android:src="@drawable/start_selected"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/evaStart5"
                style="@style/KSWrapWrap"
                android:src="@drawable/start_normal"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            style="@style/KSMatchWrap.Horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/evaFace"
                style="@style/KSWrapWrap"
                android:src="@drawable/eva_model1_4"/>
            <TextView
                android:id="@+id/evaValue"
                style="@style/KSWrapWrap"
                android:layout_marginLeft="7dp"
                android:text="@string/ks_eva_start4"
                android:textSize="14sp"
                android:textColor="#f99553"/>
        </LinearLayout>
        <EditText
            android:id="@+id/evaContent"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/selector_edittext"
            android:maxLines="3"
            android:gravity="left|top"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:hint="@string/ks_eva_hint"
            android:textColorHint="#E3E3E3"/>
        <TextView
            android:id="@+id/evaConfirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/ks_selector_button_green"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/ks_confirm"
            android:textColor="@color/ks_white"
            android:textSize="19.0sp"
            android:clickable="true"/>
    </LinearLayout>
</RelativeLayout>