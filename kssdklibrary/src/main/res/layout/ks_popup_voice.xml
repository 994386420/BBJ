<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="175.0dip"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="bottom|center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/voiceImage"
            android:layout_width="120.0dip"
            android:layout_height="120.0dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:src="@drawable/ks_microphone" />

        <TextView
            android:id="@+id/voiceTip"
            android:layout_width="wrap_content"
            android:layout_height="30.0dip"
            android:layout_marginBottom="10dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/ks_audio_status_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_rcd_hint_loading"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>