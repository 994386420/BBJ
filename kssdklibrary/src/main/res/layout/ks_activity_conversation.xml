<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLayout"
    style="@style/KSMatchMatch"
    android:background="@color/ks_activity_bg">

    <include
        android:id="@+id/title_rl"
        layout="@layout/ks_base_titlebar"/>
    <RelativeLayout
        android:id="@+id/chat_body_rl"
        style="@style/KSMatchMatch"
        android:layout_above="@+id/bottom_ll"
        android:layout_below="@id/title_rl"
        android:background="@color/ks_activity_bg">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            style="@style/KSMatchMatch">
            <ListView
                android:id="@+id/messages_lv"
                style="@style/KSMatchMatch"
                android:layout_below="@+id/title_tip_tv"
                android:background="@color/ks_activity_bg"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:listSelector="@android:color/transparent"
                android:transcriptMode="normal" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_ll"
        style="@style/KSMatchWrap.Vertical"
        android:layout_above="@+id/customKeyboardLayout"
        android:background="@color/ks_white">
        <!--android:background="@drawable/mq_conversation_edit_bg">-->
        <include layout="@layout/ks_line_horizontal"/>
        <LinearLayout
            style="@style/KSMatchWrap.Horizontal">
            <ImageView
                android:id="@+id/voice_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/ks_size_level2"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:src="@drawable/msg_input_voice"/>

            <RelativeLayout
                style="@style/KSAutoWrap"
                android:minHeight="46dp">
                <EditText
                    android:id="@+id/input_et"
                    style="@style/KSMatchWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ks_size_level4"
                    android:layout_marginRight="@dimen/ks_size_level4"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLines="5"
                    android:textColor="@color/ks_chat_et_textColor"
                    android:textCursorDrawable="@drawable/ks_shape_cursor"
                    android:textSize="@dimen/ks_textSize_level2"/>
                <TextView
                    android:id="@+id/input_tv"
                    style="@style/KSMatchWrap"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="@string/ks_audio_status_normal"
                    android:textColor="@color/ks_gray"
                    android:textSize="@dimen/ks_textSize_level2"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/emotion_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:src="@drawable/msg_input_emotion"/>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/ks_size_level1">
                <ImageView
                    android:id="@+id/function_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/ks_size_level1"
                    android:src="@drawable/msg_input_function"/>
                <TextView
                    android:id="@+id/send_tv"
                    android:layout_width="44dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:background="@drawable/ks_selector_btn_send"
                    android:text="@string/ks_send"
                    android:textColor="@color/ks_white"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <cn.kuaishang.kssdk.widget.KSCustomKeyboardLayout
        android:id="@+id/customKeyboardLayout"
        style="@style/KSMatchWrap"
        android:layout_above="@+id/operator_ll"/>
    <LinearLayout
        android:id="@+id/operator_ll"
        style="@style/KSMatchWrap.Vertical"
        android:background="#F8F8F8"
        android:layout_above="@+id/power_ll"
        android:visibility="gone">
        <include layout="@layout/ks_line_horizontal"/>
        <LinearLayout
            style="@style/KSMatchWrap.Vertical"
            android:padding="@dimen/ks_size_level3">
            <TextView
                android:id="@+id/oper_title"
                style="@style/KSMatchWrap"
                android:layout_marginLeft="20dp"
                android:text="@string/ks_tip_dialogEnd"
                android:textColor="#C5C5C5"/>
            <LinearLayout
                style="@style/KSMatchWrap"
                android:padding="@dimen/ks_size_level3">
                <TextView
                    android:id="@+id/oper_newDialog_tv"
                    style="@style/KSAutoWrap"
                    android:drawableTop="@drawable/oper_newdialog"
                    android:drawablePadding="@dimen/ks_size_level1"
                    android:gravity="center_horizontal"
                    android:text="@string/ks_oper_newDialog"
                    android:textSize="@dimen/ks_size_level3"
                    android:textColor="#909090"/>
                <TextView
                    android:id="@+id/oper_feedback_tv"
                    style="@style/KSAutoWrap"
                    android:drawableTop="@drawable/oper_feedback"
                    android:drawablePadding="@dimen/ks_size_level1"
                    android:gravity="center_horizontal"
                    android:text="@string/ks_oper_feedback"
                    android:textSize="@dimen/ks_size_level3"
                    android:textColor="#909090"/>
                <TextView
                    style="@style/KSAutoWrap"
                    android:visibility="invisible"/>
                <TextView
                    style="@style/KSAutoWrap"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/power_ll"
        style="@style/KSMatchWrap"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#F5F3F4">
        <include layout="@layout/ks_line_horizontal"/>
        <TextView
            style="@style/KSMatchWrap"
            android:paddingTop="@dimen/ks_size_level2"
            android:paddingBottom="@dimen/ks_size_level2"
            android:gravity="center"
            android:text="@string/ks_tip_powered_by"
            android:textSize="@dimen/ks_textSize_level1"
            android:visibility="gone"
            android:textColor="#D4D4D4"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/ks_rotate_progress_bar" />
</RelativeLayout>
