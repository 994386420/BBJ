<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLayout"
    style="@style/KSMatchMatch"
    android:background="@color/ks_white">

    <include
        android:id="@+id/title_rl"
        layout="@layout/ks_base_titlebar"/>
    <ScrollView
        style="@style/KSMatchMatch"
        android:layout_below="@id/title_rl">
        <LinearLayout
            style="@style/KSMatchWrap.Vertical"
            android:padding="20dp">
            <TextView
                style="@style/KSMatchWrap"
                android:lineSpacingExtra="5dp"
                android:text="很抱歉我们暂时无法为您提供服务，如果您有任何问题，请给我们留言，我们将尽快联系并解决您的问题！"/>
            <TextView
                style="@style/KSMatchWrap"
                android:layout_marginTop="20dp"
                android:text="姓名"/>
            <EditText
                android:id="@+id/fbName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/selector_edittext"
                android:maxLines="1"
                android:maxLength="20"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>
            <TextView
                style="@style/KSMatchWrap"
                android:layout_marginTop="20dp"
                android:text="留言" />
            <EditText
                android:id="@+id/fbContent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/selector_edittext"
                android:maxLines="4"
                android:maxLength="200"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="left|top"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/fbCommit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/ks_selector_button_green"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/ks_commit"
                android:textColor="@color/ks_white"
                android:textSize="19.0sp"
                android:clickable="true"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
