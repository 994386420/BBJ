<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee" >
    
  <!-- 标题栏 -->
  <RelativeLayout
        android:id="@+id/appkefu_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/appkefu_title_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/appkefu_titlebar_back_btn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/appkefu_title_bar"
            android:text="@string/appkefu_titlebar_backbtn_title"
            android:textColor="#fff"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/appkefu_titlebar_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:text="@string/appkefu_titlebar_center_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>
    
  
    <LinearLayout 
        android:id="@+id/appkefu_center_agent_detail"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@+id/appkefu_title_bar"
        android:orientation="horizontal">
     
        <Button 
            android:id="@+id/appkefu_center_onlinechat"
            android:background="@drawable/appkefu_bottombar_bg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="在线咨询"/>
        
        <Button 
            android:id="@+id/appkefu_center_hottel"
            android:background="@drawable/appkefu_bottombar_bg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="客服电话"/>
        
        <Button 
            android:id="@+id/appkefu_center_feedback"
            android:background="@drawable/appkefu_bottombar_bg"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="意见反馈"/>
        
    </LinearLayout>

    <ListView
    	android:id="@+id/appkefu_center_hotfaq"
    	android:layout_below="@+id/appkefu_center_agent_detail"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" />
    

</RelativeLayout>






































