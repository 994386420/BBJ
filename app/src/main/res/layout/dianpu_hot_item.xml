<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:layout_marginBottom="10px"
    android:layout_marginTop="10px"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bijia_grid"
        android:id="@+id/result_item"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:text=""
                        android:textColor="#111111"
                        android:textSize="12dp" />
                    <com.bbk.view.AdaptionSizeTextView
                        android:id="@+id/tv_youhui"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tuiguang8"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/tuiguang_color1"
                        android:textSize="11dp" />

                    //券和赚
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_quan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_czg1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/quan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingBottom="3dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="3dp"
                                    android:text="领券减60"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:visibility="gone"/>

                                <TextView
                                    android:layout_width="3dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/bg_cicyle" />

                                <TextView
                                    android:id="@+id/mprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textColor="#b40000"
                                    android:textSize="22dp"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/zuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/bg_czg2"
                                android:gravity="center"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/white"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/mbidprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12dp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/myouhuitext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_circle_red_white_little"
                                android:paddingBottom="2dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:paddingTop="2dp"
                                android:text="优惠劵"
                                android:visibility="gone"
                                android:textColor="#f23030"
                                android:textSize="9dp" />
                            <TextView
                                android:id="@+id/youhui_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="1dp"
                                android:text="优惠"
                                android:visibility="gone"
                                android:textSize="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tuiguang_color1"
                                android:textSize="11dp"
                                android:text="¥"/>

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tuiguang_color1"
                                android:textSize="15dp"
                                android:text="0.0"/>

                            <TextView
                                android:id="@+id/bprice"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:layout_marginLeft="5dp"
                                android:text="¥0.0"
                                android:textColor="@color/tuiguang_color4"
                                android:textSize="10dp" />
                            <TextView
                                android:id="@+id/tv_sale1"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0人付款"
                                android:gravity="right"
                                android:visibility="gone"
                                android:textColor="@color/tuiguang_color4"
                                android:textSize="12dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="0人付款"
                        android:visibility="gone"
                        android:layout_marginTop="1.5dp"
                        android:textColor="@color/tuiguang_color4"
                        android:textSize="12dp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:id="@+id/mfengexian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/copy_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/transparent2">

        <TextView
            android:id="@+id/copy_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/copy_circle"
            android:textSize="11sp"
            android:text="复制文字"/>
        <TextView
            android:id="@+id/copy_url"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/copy_circle"
            android:textSize="11sp"
            android:text="复制链接"/>

    </LinearLayout>

</RelativeLayout>