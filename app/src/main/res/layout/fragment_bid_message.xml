<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <View
        android:id="@+id/data_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#b40000" />
    <LinearLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#b40000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/topbar_goback_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@mipmap/bj_27" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#fff"
                android:text="消息"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="45dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/fengxiang"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:padding="12dp"
                android:src="@mipmap/bj_25"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <RelativeLayout
            android:id="@+id/meverydayjb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/mtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="通知"
                android:textColor="#b40000" />

            <View
                android:id="@+id/henggang1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="35dp"
                android:visibility="gone"
                android:layout_marginRight="35dp"
                android:background="#b40000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mmorejb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/mtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="聊天"
                android:textColor="#333333" />

            <View
                android:id="@+id/henggang2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="35dp"
                android:visibility="gone"
                android:layout_marginRight="35dp"
                android:background="#b40000" />
            <ImageView
                android:id="@+id/tabUnread"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/point1"
                android:visibility="gone"
                android:layout_toRightOf="@id/mtext2"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>
    <com.bbk.view.CustomViewPager
        android:id="@+id/mviewpager"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>