<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/ll_address"
    android:background="@drawable/btn_seclecter"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/address_color1"
            android:textSize="15sp"
            android:text=""/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/address_color1"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0E73DF"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="0.5dp"
            android:paddingTop="0.5dp"
            android:textSize="10sp"
            android:background="@drawable/bg_biaoqian2"
            android:layout_marginLeft="10dp"
            android:text="" />
    </LinearLayout>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/ll_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--<CheckBox-->
                <!--android:id="@+id/checkbox_set_moren"-->
                <!--android:layout_width="18dp"-->
                <!--android:layout_height="18dp"-->
                <!--android:checked="true"-->
                <!--android:button="@null"-->
                <!--style="@style/CustomCheckBoxTheme" />-->
            <ImageView
                android:id="@+id/checkbox_set_moren"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/dizhi_check" />
            <TextView
                android:id="@+id/ismoren"
                android:layout_toRightOf="@+id/checkbox_set_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:text="设为默认"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_bianji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/dizhi_bianji"/>
                <TextView
                    android:layout_toRightOf="@+id/checkbox_set_moren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:text="编辑"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/delete_address_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/dizhi_delete"/>
                <TextView
                    android:layout_toRightOf="@+id/checkbox_set_moren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:text="删除"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>