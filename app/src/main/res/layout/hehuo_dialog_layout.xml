<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="25dp"
    android:paddingBottom="35dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/text_view_border">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/tuiguang_23"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成为合伙人拿返利"
        android:textSize="14dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/tuiguang_color3"/>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hehuo_text"
        android:textSize="11dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="12dp"
        android:textColor="@color/tuiguang_color4"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_update_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_update1"
            android:textSize="12dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="拒绝"
            android:textColor="@color/tuiguang_color4"/>

        <TextView
            android:id="@+id/tv_update_gengxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="确认"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/bg_czg1"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>