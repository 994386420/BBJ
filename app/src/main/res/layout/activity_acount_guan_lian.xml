<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true" >

        <ImageButton
            android:id="@+id/guanlian_goback"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="2.0dip"
            android:background="@null"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_arrow_left_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="登录绑定"
            android:textColor="#0098FF"
            android:textSize="18sp" />
    </RelativeLayout>
         <ImageView
            android:id="@+id/select_logo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/denglu_logo" />
    <TextView 
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关联已有手机账号"
        android:textColor="#B1B3B5"
        android:textSize="15sp"/>
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:background="#DCDCDC"
	    android:layout_height="40dp"
	    android:layout_margin="10dp">
		<EditText 
		    android:id="@+id/select_account"
		    android:layout_margin="1dp"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#fff"
		    android:singleLine="true"
		    android:paddingLeft="10dp"
		    android:hint="请输入已注册手机号"
		    android:textColorHint="#DCDCDC"
		    />
	</RelativeLayout>
	
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:background="#DCDCDC"
	    android:layout_height="40dp"
	    android:layout_margin="10dp">
		<EditText 
		    android:id="@+id/select_password"
		    android:layout_margin="1dp"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#fff"
		    android:singleLine="true"
		    android:password="true"
		    android:paddingLeft="10dp"
		    android:hint="请输入密码"
		    android:textColorHint="#DCDCDC"
		    />
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#B1B3B5"
	    android:layout_margin="10dp"
	    android:textSize="13sp"
	    android:text="关联后，您的第三方账号和手机账号都可以登录"/>
    
     <RelativeLayout 
	    android:layout_width="match_parent"
	    android:background="#DCDCDC"
	    android:layout_height="40dp"
	    android:layout_margin="10dp">
	    <TextView 
	    	android:id="@+id/guanlian_login"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="#fff"
	    	android:layout_margin="1dp"
	    	android:text="登录"
	    	android:layout_gravity="center_horizontal"
	    	android:gravity="center"
	    />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView 
	        android:id="@+id/guanlian_getpassword"
	        android:layout_alignParentRight="true"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="忘记密码?"
	    	android:textSize="13sp"
	    	android:textColor="#B1B3B5"/>
	</RelativeLayout>
	
	

</LinearLayout>
