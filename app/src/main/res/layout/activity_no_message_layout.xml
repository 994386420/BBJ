<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone"
    android:id="@+id/no_message_layout"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/zw_img_330"/>
    <TextView
        android:id="@+id/tv_message"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_no_message_text"
        android:layout_marginTop="16dp"
        android:textSize="14dp"/>


    <TextView
        android:id="@+id/tv_mall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去逛逛"
        android:textSize="15dp"
        android:background="@drawable/bg_czg1"
        android:textColor="@color/white"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授权淘宝登陆"
        android:textSize="12dp"
        android:background="@drawable/bg_tuiguang1"
        android:textColor="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:layout_marginTop="25dp"/>
</LinearLayout>