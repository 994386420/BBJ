<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_item"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/item_img" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--<TextView-->
                        <!--android:id="@+id/tv_mall"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:text=""-->
                        <!--android:paddingRight="8dp"-->
                        <!--android:paddingLeft="8dp"-->
                        <!--android:paddingTop="2dp"-->
                        <!--android:paddingBottom="2dp"-->
                        <!--android:background="@drawable/bg_tuiguang3"-->
                        <!--android:layout_marginTop="2dp"-->
                        <!--android:textSize="10dp"/>-->
                    <TextView
                        android:id="@+id/tv_mall"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:textColor="@color/white"
                        android:text="京东超市"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_tuiguang1"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:text=""
                        android:textColor="#111111"
                        android:textSize="14dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/dianpu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/tuiguang_color4"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    android:text=""/>
                //券和赚
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <!--<LinearLayout-->
                            <!--android:id="@+id/ll_quan"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="center"-->
                            <!--android:layout_marginRight="5dp"-->
                            <!--android:background="@drawable/bg_czg1"-->
                            <!--android:orientation="horizontal">-->
                            <!--<TextView-->
                                <!--android:id="@+id/quan"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1"-->
                                <!--android:paddingLeft="10dp"-->
                                <!--android:paddingRight="10dp"-->
                                <!--android:paddingTop="3dp"-->
                                <!--android:paddingBottom="3dp"-->
                                <!--android:gravity="center"-->
                                <!--android:textColor="@color/white"-->
                                <!--android:text="领券减0"-->
                                <!--android:textSize="11dp"/>-->

                            <!--<TextView-->
                                <!--android:layout_width="3dp"-->
                                <!--android:layout_height="5dp"-->
                                <!--android:background="@drawable/bg_cicyle"/>-->
                            <!--<TextView-->
                                <!--android:id="@+id/mprice"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1"-->
                                <!--android:textColor="#b40000"-->
                                <!--android:text="1"-->
                                <!--android:visibility="gone"-->
                                <!--android:textSize="22dp"/>-->
                        <!--</LinearLayout>-->
                        <LinearLayout
                            android:id="@+id/ll_quan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/home_juan_01"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_czg1"
                                android:gravity="center"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="券"
                                android:textColor="@color/white"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/quan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingBottom="2dp"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:paddingTop="2dp"
                                android:text=""
                                android:textColor="@color/tuiguang_color2"
                                android:textSize="11dp" />

                            <TextView
                                android:layout_width="3dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bg_cicyle"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/mprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="#b40000"
                                android:textSize="22dp"
                                android:visibility="gone" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/zuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/bg_czg2"
                            android:paddingBottom="2dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="2dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/youhui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/bg_tuiguang6"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="4dp"
                            android:text="找优惠"
                            android:visibility="gone"
                            android:textColor="@color/tuiguang_color1"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/mbidprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:textSize="11dp"/>

                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/myouhuitext"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:background="@drawable/text_circle_red_white_little"
                            android:paddingBottom="2dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="2dp"
                            android:text="优惠劵"
                            android:textColor="#f23030"
                            android:textSize="9dp"
                            android:visibility="gone" />
                        <TextView
                            android:id="@+id/youhui_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:text="优惠"
                            android:visibility="gone"
                            android:textSize="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tuiguang_color1"
                            android:layout_marginTop="3.5dp"
                            android:textSize="12dp"
                            android:text="¥"/>

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tuiguang_color1"
                            android:layout_marginTop="3.5dp"
                            android:textSize="16dp"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/bprice"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginLeft="8dp"
                            android:text="¥0"
                            android:layout_marginTop="3.5dp"
                            android:textColor="@color/tuiguang_color4"
                            android:textSize="11dp" />
                        <TextView
                            android:id="@+id/tv_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3.5dp"
                            android:textColor="@color/tuiguang_color4"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_click_statu"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="right"
                        android:text="点击跳转得佣金"
                        android:layout_marginTop="3.5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:visibility="gone"
                        android:background="@drawable/bg_cicyle12"/>
                </FrameLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/mfengexian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/copy_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/transparent2">

            <TextView
                android:id="@+id/copy_title"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@drawable/copy_circle"
                android:textSize="11sp"
                android:text="复制文字"/>
        <TextView
            android:id="@+id/copy_url"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/copy_circle"
            android:textSize="11sp"
            android:text="复制链接"/>

    </LinearLayout>

</RelativeLayout>