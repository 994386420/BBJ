<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/result_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mimg"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="比比鲸"
                android:textSize="14dp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/mtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12dp"
                android:textColor="#999999"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="210dp"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:background="@drawable/bg_cicyle5">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@mipmap/tuiguang_08"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="分享赚"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/mcontent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:text="比比鲸"
        android:lineSpacingMultiplier = "1.5"
        android:textColor="@color/tuiguang_color3"
        android:layout_height="wrap_content"/>
    <com.bbk.view.MyGridView
        android:id="@+id/mrecy"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
    </com.bbk.view.MyGridView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/__picker_common_primary"/>
</LinearLayout>