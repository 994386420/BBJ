<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/topbar_layout"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="#FFF" >

        <ImageButton
            android:id="@+id/title_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/goback_btn" />
        <com.bbk.view.ClearableEditText
            android:layout_weight="1"
            android:layout_toRightOf="@+id/title_back_btn"
            android:id="@+id/topbar_search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/msearch_bg1"
            android:drawablePadding="5.0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="55dp"
            android:drawableRight="@mipmap/icon_clean"
            android:ems="6"
            android:layout_centerInParent="true"
            android:hint="搜索商品"
            android:imeOptions="actionSearch"
            android:padding="7dp"
            android:singleLine="true"
            android:textColor="@color/tuiguang_color4"
            android:textColorHint="@color/tuiguang_color4"
            android:textCursorDrawable="@drawable/text_cursor_color"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/address_color1"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/title_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/tuiguang_color3"
            android:textSize="21dp" />
        <TextView
            android:id="@+id/title_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/address_color1"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/title_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/tuiguang_color1"
            android:textSize="14sp" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/img_more_black"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@mipmap/store_05"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>