<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/text_view_border">
    <LinearLayout
        android:id="@+id/ll_youhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/tuiguang_23"
            />

        <TextView
            android:id="@+id/tv_zuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抱歉，该商品无优惠信息"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/tuiguang_color3"/>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您要直接购买吗？"
            android:textSize="12dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textColor="@color/tuiguang_color3"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tv_update_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_update1"
                android:textSize="12dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="拒绝"
                android:visibility="gone"
                android:textColor="@color/tuiguang_color4"/>
            <TextView
                android:id="@+id/tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="找优惠"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_czg1"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_update_gengxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="直接买"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:background="@drawable/bg_czg1"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zuji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看过往商品到"
            android:textSize="11dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/tuiguang_color4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="“"
                android:textSize="11dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/tuiguang_color4"/>
            <TextView
                android:id="@+id/tv_zuji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="足迹"
                android:textSize="11dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/tuiguang_color2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="”"
                android:textSize="11dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/tuiguang_color4"/>
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/mclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/tuiguang_37"/>
    </LinearLayout>
</LinearLayout>