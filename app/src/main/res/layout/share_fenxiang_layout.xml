<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/ll_copy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="visible"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tuiguang_color2"
            android:textSize="15dp"
            android:text="标题已复制，分享可直接粘贴哦！"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/__picker_common_primary"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享好友购买可获100%佣金奖励"
                android:layout_gravity="center"
                android:textColor="@color/tuiguang_color3"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友签到领红包，每天可领哦！"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/tuiguang_color4"
                android:textSize="13dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/topbar_goback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                android:background="@mipmap/denglu_shanchu" />
        </RelativeLayout>

    </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="0dp">

			 <RelativeLayout
                android:id="@+id/share_weixin1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/share_weixin_img1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_share_img"
                    android:scaleType="centerInside"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/fenxiang_01" />

                <TextView
                    android:id="@+id/share_weixin_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_weixin_img1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="微信好友"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="14sp" />
            </RelativeLayout>
           
            <RelativeLayout
                android:id="@+id/share_weixin"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/share_weixin_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_share_img"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/fenxiang_02" />

                <TextView
                    android:id="@+id/share_weixin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_weixin_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="朋友圈"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >

        </LinearLayout>

</LinearLayout>