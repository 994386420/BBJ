<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/topbar_layout"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_layout"/>
    <View
        android:layout_below="@+id/title"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3" />
        <com.bbk.view.MyScrollViewNew
            android:layout_below="@+id/view"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/__picker_common_primary"
            android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="60dp">

            <LinearLayout
                android:id="@+id/ll_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingBottom="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="25dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/order_03" />
                <TextView
                    android:id="@+id/add_address_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:text=" 添加地址"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    android:textColor="@color/shop_color1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/order_03" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tuiguang_color3"
                            android:textSize="14dp"
                            android:text="" />
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/tuiguang_color3"
                            android:textSize="14dp"
                            android:layout_marginLeft="15dp"
                            android:text="" />

                        <TextView
                            android:id="@+id/tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#0E73DF"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:paddingBottom="0.5dp"
                            android:paddingTop="0.5dp"
                            android:textSize="10sp"
                            android:background="@drawable/bg_biaoqian2"
                            android:layout_marginLeft="10dp"
                            android:text="" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/shop_color1"
                        android:textSize="13dp"
                        android:text="" />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/enter01"
                    android:visibility="visible"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@mipmap/order_14"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/__picker_common_primary"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:id="@+id/ll_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_dikou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <CheckBox
                    android:id="@+id/ck_dikou"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:button="@null"
                    android:checked="false"
                    android:background="@drawable/checkbox_order"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:id="@+id/ll_yongjin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_yongjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <CheckBox
                    android:id="@+id/ck_yongjin"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:button="@null"
                    android:checked="false"
                    android:background="@drawable/checkbox_order"/>
            </LinearLayout>
        </LinearLayout>
        </com.bbk.view.MyScrollViewNew>
    <!--分割线-->
    <LinearLayout
        android:id="@+id/ll_bottom_car"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />
        <LinearLayout
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:gravity="center"
                android:visibility="visible"
                android:orientation="horizontal"
                android:id="@+id/order_info"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    =
                    <LinearLayout
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/tuiguang_color3"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"
                            android:text="合计金额"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/total_price"
                            android:text="￥0.00"
                            android:textSize="14sp"
                            android:textColor="@color/tuiguang_color1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/go_pay"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_czg2"
                    android:gravity="center"
                    android:text="提交订单"
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>