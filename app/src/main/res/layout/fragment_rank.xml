<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FC"
    android:id="@+id/fwRootLayout"
    android:orientation="vertical" >

    <View
        android:id="@+id/rank_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

		<LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/text_result_gray_more" >

            

            <EditText
                android:id="@+id/search_edit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="输入关键词，搜索相关文章"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="#808080"
                android:textColorHint="#808080"
                android:textCursorDrawable="@drawable/text_cursor_color"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@mipmap/search_hui" />
            
        </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/mhscrollview"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/mbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFF" >

        <TextView
            android:id="@+id/topbar_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发现"
            android:textSize="21dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dbdbdb"/>
    <com.bbk.view.MyXRefreshView
        android:id="@+id/xrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView 
        android:id="@+id/mlistview"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="match_parent">
        
    </ListView>
	</com.bbk.view.MyXRefreshView>
</LinearLayout>