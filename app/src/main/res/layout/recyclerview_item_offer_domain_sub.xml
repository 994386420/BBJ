<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"

    android:layout_marginBottom="3dp">

    <LinearLayout 
        android:id="@+id/box"
    	android:paddingRight="8dp" 
        android:background="#f3f3f3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="140dp">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView 
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="11dp"
                android:textColor="#666666"/>
            <LinearLayout 
    		    android:layout_toLeftOf="@id/biankuang"
    		    android:orientation="horizontal"
    		    android:layout_alignParentRight="true"
    		    android:layout_width="wrap_content"
    		    android:layout_marginRight="10dp"
    		    android:layout_centerVertical="true"
    		    android:layout_height="wrap_content">
    		    <TextView 
    		        
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:text="销量"
    		        android:textColor="#999999"/>
    		    <TextView 
    		        android:id="@+id/sell_num"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:text="1.2万"
    		        android:textColor="#111111"/>
    		    <ImageView 
    		        android:layout_marginLeft="10dp"
    		        android:layout_width="15dp"
    		        android:layout_height="15dp"
    		        android:layout_marginRight="2dp"
    		        android:src="@mipmap/praise_02"/>
    		    <TextView 
    		        android:id="@+id/comment"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:text="1.2万"
    		        android:textColor="#111111"/>
    		</LinearLayout>
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cbcbcb"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView 
                android:id="@+id/mimg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerInside"
                android:layout_marginRight="8dp"
                android:src="@mipmap/zw_img_300"/>
            <LinearLayout 
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="90dp">
                <TextView 
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="秋季新款男士休闲裤秋季新款男士休闲裤秋季新款 男士休闲裤"
                	android:lines="2"
                	android:textColor="#999999"
                	android:textSize="11dp"
                	android:ellipsize="end"
                    android:layout_weight="1"/>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="12dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#c80000" />

                    <TextView
                       	android:id="@+id/mbigprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="-3dp"
                        android:text="399"
                        android:textColor="#c80000"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/mlittleprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text=".0"
                        android:textSize="12dp"
                        android:textColor="#c80000" />
                </LinearLayout>
                <RelativeLayout 
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <RelativeLayout 
        				android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:layout_centerVertical="true"
        				android:background="@drawable/text_view_border5"
    					android:paddingLeft="8dp"
    					android:paddingTop="3dp"
    					android:paddingRight="8dp"
    					android:paddingBottom="3dp">
        				<TextView   
    						android:layout_centerInParent="true" 
    						android:layout_width="wrap_content"   
    						android:layout_height="wrap_content"
    						android:singleLine="true"
    						android:textColor="#333333"
    						android:textSize="13dp"  
    						android:text="前往购买" />     
    				</RelativeLayout>
    				<ImageView 
    				    android:id="@+id/swich_img"
    				    android:layout_width="40dp"
    				    android:layout_height="40dp"
    				    android:paddingLeft="10dp"
    				    android:paddingTop="10dp"
    				    android:layout_alignParentRight="true"
    				    android:layout_alignParentBottom="true"
    				    android:src="@mipmap/more_01"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:visibility="gone"
        android:id="@+id/detail"
        android:background="#fff"
    	android:paddingRight="8dp" 
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/history"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="历史价格"
                android:gravity="center"
                android:textColor="#0098ff"
                android:textSize="12dp"/>
            <TextView 
                android:id="@+id/argument"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="详细参数"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="12dp"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0098ff"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/img1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/down03"/>
            <ImageView 
                android:id="@+id/img2"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:src="@mipmap/down03"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/history_price_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                     />
            <LinearLayout 
                android:visibility="gone"
                android:id="@+id/argument_detail"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout 
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text2"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text3"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text4"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text5"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text6"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text7"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text8"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text9"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text10"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text11"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text12"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text13"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text14"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView 
                            android:id="@+id/text15"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#999999"/>
                        <TextView 
                            android:id="@+id/text16"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="#333333"/>
                        
                    </LinearLayout>
                </LinearLayout>
               
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_below="@id/box"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#fff"/>
    <View 
        android:layout_below="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#f3f3f3"/>
</RelativeLayout>