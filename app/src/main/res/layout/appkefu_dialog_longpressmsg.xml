<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_vertical">
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/appkefu_dialog_side_padding"
                android:paddingRight="@dimen/appkefu_dialog_side_padding"
                android:fadingEdge="none">
        <FrameLayout android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:paddingTop="@dimen/appkefu_dialog_vertical_padding"
                     android:paddingBottom="@dimen/appkefu_dialog_vertical_padding">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="16dp"
                          android:background="@drawable/appkefu_dialog_background">
                          
                <TextView android:id="@+id/appkefu_dialog_chooseaction_title"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="8dp"
                          style="@style/appkefuInteractionDialogTitle"
                          android:text="@string/appkefu_please_choose_action"/>
                
                <Button android:id="@+id/appkefu_dialog_copy"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        style="@style/appkefuInteractionPositiveButton"
                        android:text="@string/appkefu_copy"/>
                
                <Button android:id="@+id/appkefu_dialog_delete"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        style="@style/appkefuInteractionNegativeButton"
                        android:text="@string/appkefu_delete"/>
                
                <Button android:id="@+id/appkefu_dialog_cancel"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        style="@style/appkefuInteractionNegativeButton"
                        android:text="@string/appkefu_cancel"/>
                
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>








