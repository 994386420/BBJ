<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >
    <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/default_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/item_img" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="Apple iPhone 5s 16G 金色  Apple iPhone 5s 16G 金色 Apple iPhone 5s 16G 金色 "
                android:textColor="#111111"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="共562条报价"
                android:textColor="#999999"
                android:textSize="11dp" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/myuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="1dp"
                        android:text="￥"
                        android:textColor="#c80000"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/mbigprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/myuan"
                        android:text="29"
                        android:textColor="#c80000"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/mlittleprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="1dp"
                        android:layout_toRightOf="@id/mbigprice"
                        android:textColor="#c80000"
                        android:textSize="13dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >
                    <RelativeLayout
                        android:id="@+id/intentbuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/text_circle_orange_white"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="看比价"
                            android:textColor="@color/biao_color"
                            android:textSize="12dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/findsimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/text_result_orange"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我想要"
                            android:textColor="#fff"
                            android:textSize="12dp" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
    <View
        android:id="@+id/mfengexian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <LinearLayout
        android:id="@+id/mcoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/myouhuitext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_circle_red_white_little"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:text="优惠劵"
            android:textColor="#f23030"
            android:textSize="9dp" />
        <TextView
            android:id="@+id/mcoupontext"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textSize="13dp"
            android:maxEms="16"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="每满299减20"/>
        <ImageView
            android:id="@+id/mcouponimg"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/enter01"
            />
        <View
            android:id="@+id/lingjuanzhanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/mlingjuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领劵"/>
    </LinearLayout>
</LinearLayout>