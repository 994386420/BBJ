<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/mimg"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView 
            android:id="@+id/mdomain"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mimg"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#333333"
            android:singleLine="true"
            android:textSize="13dp"
            android:text="京东"/>
        <RelativeLayout 
            android:layout_toRightOf="@id/mdomain"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
				<TextView 
		    		android:id="@+id/myuan"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_alignParentBottom="true"
		    		android:layout_alignParentLeft="true"
		    		android:textSize="13dp"
		    		android:layout_marginBottom="1dp"
		    		android:textColor="#c80000"
		    		android:text="￥"/>
				<TextView 
		    		android:id="@+id/mbigprice"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_alignParentBottom="true"
					android:layout_toRightOf="@id/myuan"
		    		android:textSize="15dp"
		    		android:textColor="#c80000"
		    		android:text="29"/>
				<TextView 
		    		android:id="@+id/mlittleprice"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:layout_marginBottom="1dp"
		    		android:layout_alignParentBottom="true"
					android:layout_toRightOf="@id/mbigprice"
		    		android:textSize="13dp"
		    		android:text=".0"
		    		android:textColor="#c80000"
		    		/>
			</RelativeLayout>
        <RelativeLayout 
            android:id="@+id/intentbuy"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:background="@drawable/text_view_border_red"
    		android:paddingLeft="10dp"
    		android:paddingTop="4dp"
    		android:paddingRight="10dp"
    		android:paddingBottom="4dp">
        	<TextView   
    			android:layout_centerInParent="true" 
    			android:layout_width="wrap_content"   
    			android:layout_height="wrap_content"
    			android:singleLine="true"
    			android:textColor="#c80000"
    			android:textSize="13dp"  
    			android:text="去购买" />     
    	</RelativeLayout>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f3f3f3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>
