<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/topbar_layout"
    android:orientation="vertical">
    <include
        android:id="@+id/title"
        layout="@layout/title_layout"/>
    <com.bbk.view.MyScrollViewNew
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/__picker_common_primary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#FF5500">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wuliu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/order_02" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_wuliu_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shop_color1"
                        android:textSize="13dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_wulitime"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/tuiguang_color4"
                        android:textSize="11dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/enter01" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/order_03" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/shop_color1"
                            android:textSize="13dp"
                            android:text="" />
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/shop_color1"
                            android:textSize="13dp"
                            android:text="" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/shop_color1"
                        android:textSize="13dp"
                        android:text="" />
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/enter01"
                    android:visibility="gone"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="退款总金额" />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color1"
                    android:textSize="13dp"
                    android:text="0.00" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:id="@+id/ll_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="退回微信" />

                <TextView
                    android:id="@+id/tv_usejinbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="0.00" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:id="@+id/ll_yongjin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="退回佣金" />

                <TextView
                    android:id="@+id/tv_useyongjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="0.00" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:id="@+id/ll_jingbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="退回鲸币" />

                <TextView
                    android:id="@+id/tv_usejingbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color3"
                    android:textSize="13dp"
                    android:text="0.00" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_shifukuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:visibility="gone">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color4"
                    android:textSize="13dp"
                    android:text="实付款(含运费)" />

                <TextView
                    android:id="@+id/tv_shifukuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color1"
                    android:textSize="16dp"
                    android:text="0.00" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/__picker_common_primary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_line1"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="45dp"
                        android:layout_height="2.2dp"
                        android:visibility="invisible"
                        android:background="@color/tuiguang_color5"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_cicyle1"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="55dp"
                        android:layout_height="2.2dp"
                        android:background="@color/tuiguang_color5"/>
                </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="卖家退款"
                        android:textColor="@color/shop_color1"
                        android:textSize="12dp"/>
                    <com.bbk.view.AdaptionSizeTextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@color/tuiguang_color4"
                        android:textSize="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_line2"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view3"
                        android:layout_width="55dp"
                        android:layout_height="2.2dp"
                        android:background="@color/tuiguang_color5"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_cicyle1"/>
                    <View
                        android:id="@+id/view4"
                        android:layout_width="55dp"
                        android:layout_height="2.2dp"
                        android:background="@color/__picker_common_primary"/>
                </LinearLayout>
                    <TextView
                        android:id="@+id/tv_shouli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="@color/shop_color1"
                        android:textSize="12dp"/>
                    <com.bbk.view.AdaptionSizeTextView
                        android:id="@+id/tv_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@color/tuiguang_color4"
                        android:textSize="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_line3"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_marginTop="13dp"
                        android:layout_height="wrap_content">
                        <View
                            android:id="@+id/view5"
                            android:layout_width="55dp"
                            android:layout_height="2.2dp"
                            android:background="@color/__picker_common_primary"/>
                        <View
                            android:id="@+id/view6"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_cicyle6"/>
                        <View
                            android:layout_width="45dp"
                            android:layout_height="2.2dp"
                            android:visibility="invisible"
                            android:background="@color/__picker_common_primary"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="退款成功"
                        android:textColor="@color/shop_color1"
                        android:textSize="12dp"/>
                    <com.bbk.view.AdaptionSizeTextView
                        android:id="@+id/tv_time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@color/tuiguang_color4"
                        android:textSize="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/__picker_common_primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:padding="10dp"
                android:textColor="@color/tuiguang_color3"
                android:text="退款信息"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/shop_color2"
                android:id="@+id/item_order">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/item_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/default_img" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/item_img"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/item_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="2"
                                android:text=" "
                                android:textColor="@color/tuiguang_color3"
                                android:textSize="13dp" />

                            <LinearLayout
                                android:id="@+id/ll_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_shop_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="13dp"
                                    android:textColor="@color/tuiguang_color3"/>

                                <TextView
                                    android:id="@+id/tv_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shop_guige"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="4dp"
                                android:text=""
                                android:textColor="@color/tuiguang_color4"
                                android:textSize="11dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_seclecter"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tuiguang_color4"
                    android:textSize="13dp"
                    android:text="退款原因" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_money"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tuiguang_color4"
                android:textSize="13dp"
                android:text="退款金额"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/tv_jianshu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tuiguang_color4"
                android:textSize="13dp"
                android:text="申请件数"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tuiguang_color4"
                android:textSize="13dp"
                android:text="申请时间"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>
            <TextView
                android:id="@+id/tv_bianhao"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tuiguang_color4"
                android:textSize="13dp"
                android:text="退款编号"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/__picker_common_primary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@color/__picker_common_primary"/>
        </LinearLayout>
    </com.bbk.view.MyScrollViewNew>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_lx_maijia"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/btn_seclecter"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/order_05"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/shop_color1"
                android:text="联系卖家"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/__picker_common_primary"/>
        <LinearLayout
            android:id="@+id/ll_bohao"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/btn_seclecter"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/order_06"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/shop_color1"
                android:text="拨打电话"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>