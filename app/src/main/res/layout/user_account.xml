<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <RelativeLayout
            android:id="@+id/topbar_layout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#FFF" >

        <ImageButton
            android:id="@+id/topbar_goback_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/goback_btn" />

            <TextView
                android:id="@+id/topbar_title_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人资料"
                android:textSize="21dp" />

        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f3f3f3"/>
        <LinearLayout 
            android:id="@+id/muserimg"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"/>
            <ImageView 
			    android:id="@+id/user_img"
			    android:layout_width="60dp"
			    android:layout_height="60dp"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:src="@mipmap/logo_01"
			    android:layout_marginLeft="15dp"/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/enter01"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
           android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout 
            android:id="@+id/musername"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="昵称"/>
            <TextView 
                android:id="@+id/mnickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="想来想去"/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/enter01"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout 
            android:id="@+id/msex"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"/>
            <TextView 
                android:id="@+id/sextext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/enter01"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout 
            android:id="@+id/mbirthday"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="出生日期"/>
            <TextView 
                android:id="@+id/mdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1986-12-12"/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/enter01"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f3f3f3"/>
        <LinearLayout 
            android:id="@+id/mphone"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号"/>
            <TextView 
                android:id="@+id/mphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18888888888"/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/mpassword"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="登录密码"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/enter01"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <LinearLayout 
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册号"/>
            <TextView 
                android:id="@+id/muserid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <ImageView 
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/enter01"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd"/>
        <View 
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#f3f3f3"/>
		<TextView 
		    android:id="@+id/user_sign_out"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="退出登录"
		    android:gravity="center"
		    android:padding="15dp"/>
		 <View 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f3f3f3"/>

</LinearLayout>