<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:gravity="center_vertical"
	     android:orientation="horizontal"
	    >
        <com.bbk.view.CircleImageView
            android:id="@+id/userimg1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/zw_img_160"
            android:layout_marginRight="2dp"
            app:border_color="#FFFFFF"
            app:border_width="2.0dip" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="134****1564邀请了"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/mnumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="1"
            android:textColor="#ff8518"
            android:textSize="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个好友，提现"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
             android:id="@+id/rmb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="1.34"
            android:textColor="#ff8518"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
	</LinearLayout>
	<LinearLayout 
	    android:layout_marginTop="3dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:gravity="center_vertical"
	     android:orientation="horizontal"
	    >
        <com.bbk.view.CircleImageView
            android:id="@+id/userimg2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/zw_img_160"
            android:layout_marginRight="2dp"
            app:border_color="#FFFFFF"
            app:border_width="2.0dip" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="134****1564邀请了"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/mnumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="1"
            android:textColor="#ff8518"
            android:textSize="13dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个好友，提现"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rmb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="1.34"
            android:textColor="#ff8518"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
	</LinearLayout>
</LinearLayout>
