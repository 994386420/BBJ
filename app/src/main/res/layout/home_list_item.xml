<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:layout_marginBottom="10px"
    android:layout_marginTop="10px"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_item"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="#111111"
                        android:textSize="14dp" />
                    //券和赚
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_quan"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/home_juan_01"
                                android:gravity="center"
                                android:layout_marginRight="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/quan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:gravity="center"
                                    android:text="券0"
                                    android:textColor="@color/tuiguang_color2"
                                    android:textSize="10dp"
                              />

                            </LinearLayout>

                            <com.bbk.view.AdaptionSizeTextView
                                android:id="@+id/zuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_tuiguang8"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:text=""
                                android:textColor="@color/tuiguang_color1"
                                android:textSize="11dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tuiguang_color1"
                                android:textSize="11dp"
                                android:text="¥"/>

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/tuiguang_color1"
                                android:textSize="15dp"
                                android:text="0.0"/>

                            <TextView
                                android:id="@+id/bprice"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:layout_marginLeft="5dp"
                                android:text="¥0.0"
                                android:textColor="@color/tuiguang_color4"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <!--<View-->
            <!--android:id="@+id/mfengexian"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#f3f3f3"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--android:layout_marginRight="8dp"/>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/copy_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/transparent2">

        <TextView
            android:id="@+id/copy_title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/copy_circle"
            android:textSize="11sp"
            android:text="复制文字"/>
        <TextView
            android:id="@+id/copy_url"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/copy_circle"
            android:textSize="11sp"
            android:text="复制链接"/>

    </LinearLayout>

</RelativeLayout>