<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126.0dip" >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="137.0dip"
        android:layout_height="137.0dip"
        android:layout_centerVertical="true"
        android:src="@mipmap/default_img" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_img"
        android:orientation="vertical" >

        <TextView
            android:layout_weight="1"
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24.0dip"
            android:layout_marginTop="14.0dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:text="夏季新款男士无痕T袖莫代 尔时尚青年t恤男短袖V领纯 色紧身打底衫"
            android:textColor="#FF323232"
            android:textSize="13.0sp" >
        </TextView>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7.0dip"
                android:text="￥"
                android:textColor="#FF0098FF"
                android:textSize="20.0sp" >
            </TextView>

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17.0dip"
                android:text="49"
                android:textColor="#FF0098FF"
                android:textSize="30.0sp" >
            </TextView>
            
            <TextView
                android:id="@+id/item_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价:59"
                android:textColor="#969696"
                android:textSize="12.0sp"/>
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:id="@+id/item_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:text="来自3个商城，26条报价"
            android:textColor="#FFDF9307"
            android:textSize="12.0sp" />
    </LinearLayout>
    

</RelativeLayout>