<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/result_item"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:scaleType="centerCrop" />
    <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:text=""
                    android:textColor="#111111"
                    android:textSize="14dp" />
                //券和赚
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/ll_quan"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_czg1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/quan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/white"
                                android:text="领券减60"
                                android:textSize="10dp"/>

                            <TextView
                                android:layout_width="3dp"
                                android:layout_height="5dp"
                                android:background="@drawable/bg_cicyle"/>
                            <TextView
                                android:id="@+id/mprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#b40000"
                                android:text="1"
                                android:visibility="gone"
                                android:textSize="22dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/zuan"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_czg2"
                            android:paddingBottom="2dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="2dp"
                            android:text=""
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/tuiguang_color5"
                            android:textSize="10dp" />
                        <TextView
                            android:id="@+id/mbidprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:textSize="12dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/myouhuitext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_circle_red_white_little"
                            android:paddingBottom="2dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="2dp"
                            android:text="优惠劵"
                            android:visibility="gone"
                            android:textColor="#f23030"
                            android:textSize="9dp" />
                        <TextView
                            android:id="@+id/youhui_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:text="优惠"
                            android:visibility="gone"
                            android:textSize="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/biao_color"
                            android:textSize="12dp"
                            android:text="¥"/>

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/biao_color"
                            android:textSize="16dp"
                            android:text="5"/>

                        <TextView
                            android:id="@+id/bprice"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginLeft="8dp"
                            android:text="¥55"
                            android:textColor="@color/tuiguang_color4"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/mfengexian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/copy_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/transparent2">

            <TextView
                android:id="@+id/copy_title"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@drawable/copy_circle"
                android:textSize="11sp"
                android:text="复制文字"/>
        <TextView
            android:id="@+id/copy_url"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/copy_circle"
            android:textSize="11sp"
            android:text="复制链接"/>

    </LinearLayout>

</RelativeLayout>