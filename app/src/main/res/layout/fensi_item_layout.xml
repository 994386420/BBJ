<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_seclecter"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tuiguang_color3"
                android:textSize="15dp" />
            <com.bbk.view.AdaptionSizeTextView
                android:id="@+id/tv_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/tuiguang_color4"
                android:text="今日已签到"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center">
            <ImageView
                android:id="@+id/iv_hongbao"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:visibility="gone" />
            <com.bbk.view.AdaptionSizeTextView
                android:id="@+id/tv_lingqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已领取"
                android:textSize="14dp"
                android:visibility="gone"
                android:textColor="@color/tuiguang_color1"/>

            <com.bbk.view.AdaptionSizeTextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="提醒TA签到"
                android:gravity="center"
                android:textSize="11dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:textColor="@color/tuiguang_color1"
                android:background="@drawable/bg_tuiguang6" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/__picker_common_primary"/>
</LinearLayout>