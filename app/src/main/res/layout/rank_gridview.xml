<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/iv_gridView_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@mipmap/zw_img_300"/>
    <TextView
        android:id="@+id/tv_gridView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:singleLine="true" 
        android:textSize="11dp"
        android:layout_gravity="center_horizontal"
        android:text="超市"/>
    </LinearLayout>
	      <RelativeLayout
	        android:visibility="gone"
	        android:id="@+id/rank"
          	android:layout_marginTop="5dp"
          	android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >

            <ImageView
                android:id="@+id/rank_img"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@mipmap/top01" />

            <TextView
                android:id="@+id/rank_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rank_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </RelativeLayout>
</RelativeLayout>
