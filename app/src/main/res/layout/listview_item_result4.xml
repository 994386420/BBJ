<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/zw_img_300"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/item_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Apple iPhone 5s 16G 金色  "
                android:textColor="#111111"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_offer"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom"
                android:text="共562条报价"
                android:textColor="#999999"
                android:textSize="11dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/myuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="1dp"
                    android:text="￥"
                    android:textColor="#c80000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mbigprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/myuan"
                    android:text="29"
                    android:textColor="#c80000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/mlittleprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1dp"
                    android:layout_toRightOf="@id/mbigprice"
                    android:text=""
                    android:textColor="#c80000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/juan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/mlittleprice"
                    android:background="@drawable/text_result_red_little"
                    android:paddingBottom="1px"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1px"
                    android:text="领劵"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <RelativeLayout
                        android:id="@+id/mmoredomain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_circle_orange_white"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="看比价"
                            android:textColor="@color/biao_color"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <RelativeLayout
                        android:id="@+id/intentbuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_result_orange"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="去发镖"
                            android:textColor="#fff"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>