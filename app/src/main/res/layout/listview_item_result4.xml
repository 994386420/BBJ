<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:layout_marginBottom="10px"
    android:layout_marginTop="10px"
    android:background="@drawable/bg_bijia_grid">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:src="@mipmap/zw_img_300"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="#111111"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/item_offer"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="共0条报价"
                android:textColor="#999999"
                android:textSize="11dp" />
            <TextView
                android:id="@+id/zuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_czg2"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="11dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="22dp">

                <TextView
                    android:id="@+id/myuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="1dp"
                    android:text="￥"
                    android:textColor="#c80000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/mbigprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/myuan"
                    android:text="0.0"
                    android:textColor="#c80000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/mlittleprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="1dp"
                    android:layout_toRightOf="@id/mbigprice"
                    android:text=""
                    android:textColor="#c80000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/juan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/mlittleprice"
                    android:background="@drawable/text_result_red_little"
                    android:paddingBottom="1px"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1px"
                    android:text="领劵"
                    android:textColor="#fff"
                    android:textSize="12dp" />
                <LinearLayout
                    android:id="@+id/ll_quan"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_czg1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/quan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/white"
                        android:text="领券减0"
                        android:textSize="11dp"/>

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="5dp"
                        android:background="@drawable/bg_cicyle"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >
                    <RelativeLayout
                        android:id="@+id/mmoredomain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_circle_orange_white"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/tv_qubuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="看比价"
                            android:textColor="@color/biao_color"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <RelativeLayout
                        android:id="@+id/intentbuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_result_orange"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发飙"
                            android:textColor="#fff"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>